{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "downlevelIteration": true,
        "module": "commonjs",
        "noLib": true,
        "strict": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@rbxts"
        ],
        "moduleDetection": "force",
        "moduleResolution": "Node",
        // required, configurable
        "rootDirs": [
            "src/",
            "index.d.ts",
            "globals.d.ts"
        ],
        "outDir": "out/",
        // optional
        "declaration": true,
        // optional, non-configurable
        "jsx": "react",
        "jsxFactory": "Roact.createElement"
    }
}